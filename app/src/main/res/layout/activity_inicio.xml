<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737"
    tools:context=".inicio">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="281dp"
        android:layout_height="130dp"
        android:layout_marginBottom="528dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/overline_4" />

    <Button
        android:id="@+id/button3"
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/crearficha"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        app:backgroundTint="#FFB952"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641" />

    <Button
        android:id="@+id/button4"
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/Mis_personajes"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        app:backgroundTint="#FFB952"
        app:icon="@android:drawable/ic_input_get"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <Button
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:fontFamily="@font/gruppo"
        android:onClick="Daditos"
        android:text="@string/Dados"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:backgroundTint="#FFB952"
        app:iconPadding="0.1dp"
        app:iconTint="#000000"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>