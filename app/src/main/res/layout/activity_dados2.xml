<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dados2">

    <TextView
        android:id="@+id/txtCantidadDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:fontFamily="@font/gruppo"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="@string/CantidadDeDados"
        android:textColor="@color/Naranja"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextNumeros"
        android:layout_width="144dp"
        android:layout_height="123dp"
        android:layout_below="@+id/txtCantidadDados"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:background="@drawable/style_border_editext"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="1"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/d8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumeros"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/d6"
        android:layout_toRightOf="@+id/d6"
        android:onClick="D8"
        app:srcCompat="@drawable/d8" />

    <ImageView
        android:id="@+id/d4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumeros"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="26dp"
        android:onClick="D4"
        app:srcCompat="@drawable/d4" />

    <ImageView
        android:id="@+id/d10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumeros"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_toEndOf="@+id/d8"
        android:layout_toRightOf="@+id/d8"
        android:onClick="D10"
        app:srcCompat="@drawable/d10" />

    <ImageView
        android:id="@+id/d6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNumeros"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/d4"
        android:layout_toRightOf="@+id/d4"
        android:onClick="D6"
        app:srcCompat="@drawable/d6" />

    <ImageView
        android:id="@+id/d12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtResultado"
        android:layout_below="@+id/d4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="35dp"
        android:onClick="D12"
        app:srcCompat="@drawable/d12" />

    <ImageView
        android:id="@+id/d20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtResultado"
        android:layout_below="@+id/d6"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/d12"
        android:layout_toRightOf="@+id/d12"
        android:onClick="D20"
        app:srcCompat="@drawable/d20" />

    <ImageView
        android:id="@+id/d100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtResultado"
        android:layout_below="@+id/d8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/d20"
        android:layout_toRightOf="@+id/d20"
        android:onClick="D100"
        app:srcCompat="@drawable/d100" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="198dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/style_border_editext"
        android:fontFamily="@font/gruppo"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold" />

</RelativeLayout>