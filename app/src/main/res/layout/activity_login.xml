<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="198dp"
        android:layout_above="@+id/tVUsuario"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="29dp"
        android:foregroundGravity="bottom"
        android:src="@drawable/overline_4"
        app:srcCompat="@drawable/overline_4" />

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="262dp"
        android:layout_height="49dp"
        android:layout_above="@+id/tVContrasena"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:fontFamily="@font/gruppo"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textAllCaps="true"
        android:textColor="#FFB952"
        android:textColorHint="#FFB952"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tVUsuario"
        android:layout_width="262dp"
        android:layout_height="44dp"
        android:layout_above="@+id/txtEmailLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/usuario"
        android:textAllCaps="true"
        android:textColor="#FFB952"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tVContrasena"
        android:layout_width="282dp"
        android:layout_height="51dp"
        android:layout_above="@+id/txtContrasenaLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/gruppo"
        android:text="@string/contrasena"
        android:textAllCaps="true"
        android:textColor="#FFB952"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/txtContrasenaLogin"
        android:layout_width="262dp"
        android:layout_height="43dp"
        android:layout_above="@+id/cbRecordar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="#FFB952"
        android:textStyle="bold|italic" />

    <CheckBox
        android:id="@+id/cbRecordar"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAcceder"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="4dp"
        android:checked="false"
        android:fontFamily="@font/gruppo"
        android:text="@string/Recordar_contrasena"
        android:textColor="#FFB952"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnAcceder"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_above="@+id/btnRegistrase"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/gruppo"
        android:onClick="pasarIndex"
        android:text="@string/acceder"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/Naranja" />

    <Button
        android:id="@+id/btnRegistrase"
        android:layout_width="265dp"
        android:layout_height="49dp"
        android:layout_above="@+id/btnGoogle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="73dp"
        android:layout_marginLeft="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/gruppo"
        android:onClick="registrarme"
        android:text="@string/registrarse"
        android:textColor="#FFB952"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#7C7B7B"
        app:rippleColor="#A3A3A3" />

    <ImageButton
        android:id="@+id/btnGoogle"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="327dp"
        android:layout_marginLeft="327dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="98dp"
        android:background="@color/fondo"
        android:src="@drawable/google" />

    <Button
        android:id="@+id/button"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_below="@+id/btnRegistrase"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="263dp"
        android:layout_marginRight="263dp"
        android:layout_marginBottom="30dp"
        android:onClick="prueba"
        android:text="prueba" />

</RelativeLayout>